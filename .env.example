# ========================================
# Application Configuration
# ========================================
ENV=dev
FASTAPI_PORT=8000
DEBUG_MODE=true

# ========================================
# Base Paths
# ========================================
BASE_DIR=/home/user/webapp
CONFIG_DIR=/home/user/webapp/app/config
DATA_DIR=/home/user/webapp/data
UPLOADS_DIR=/home/user/webapp/uploads

# ========================================
# Video Processing
# ========================================
VIDEO_FPS=60
VIDEO_HEIGHT=720
VIDEO_MIRROR=false

# ========================================
# Phase Detection
# ========================================
PHASE_METHOD=auto
# PHASE_MODEL_PATH=/path/to/model.pth

# ========================================
# LLM Configuration
# ========================================
LLM_PROVIDERS=openai,mcp-openai,noop
LLM_PROVIDER=noop
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE_DEFAULT=0.4
LLM_MAX_TOKENS_DEFAULT=100
OPENAI_API_KEY=sk-your-openai-api-key-here

# ========================================
# Internal API (Platform Communication)
# ========================================
INTERNAL_API_KEY=my-super-secret-internal-key
LLM_GATEWAY_URL=http://localhost:3030

# ========================================
# Thresholds & Datasets
# ========================================
# THRESHOLDS_FILE=/path/to/thresholds.json
# DATASET_PATH=/path/to/dataset.parquet
